<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.infomind.snakedroid.GameBoard"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <android.support.constraint.ConstraintLayout

        android:id="@+id/linearLayout"
        android:layout_width="384dp"
        android:layout_height="30dp"
        android:layout_marginTop="-16dp"
        android:background="@color/black"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/pontos"
            android:layout_width="77dp"
            android:layout_height="30dp"
            android:layout_marginTop="0dp"
            android:layout_weight="0.06"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="PONTOS:"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="8dp" />

        <TextView
            android:id="@+id/pontos_valor"
            android:layout_width="133dp"
            android:layout_height="25dp"
            android:layout_weight="0.25"
            android:text="0"
            android:textAlignment="viewStart"
            android:textColor="@color/yellow"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/pontos"
            android:layout_marginLeft="8dp"
            app:layout_constraintVertical_bias="0.6" />

    </android.support.constraint.ConstraintLayout>



    <GridLayout
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:columnCount="6"
        android:orientation="horizontal"
        android:padding="15dp"
        android:rowCount="3"
        tools:context="br.ufrn.eaj.tads.exemplogrid.MainActivity"
        app:layout_constraintLeft_toLeftOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

    </GridLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-69dp"
        android:background="@color/verdeclaro"
        app:layout_constraintTop_toBottomOf="@+id/grid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/constraintLayout">


    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/bgControll"
        android:layout_width="148dp"
        android:layout_height="148dp"
        android:layout_marginTop="15dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        app:srcCompat="@drawable/control_bg" />

    <ImageView
        android:id="@+id/btnLeft"
        android:layout_width="34dp"
        android:layout_height="27dp"
        android:layout_marginRight="-9dp"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toLeftOf="@+id/btnUp"
        app:layout_constraintTop_toBottomOf="@+id/btnUp"

        app:srcCompat="@drawable/btn_left"
        android:onClick="clickControl"/>

    <ImageView
        android:id="@+id/btnRight"
        android:layout_width="34dp"
        android:layout_height="27dp"
        app:srcCompat="@drawable/btn_right"
        app:layout_constraintLeft_toRightOf="@+id/btnUp"

        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btnUp"
        android:onClick="clickControl"/>

    <ImageView
        android:id="@+id/btnUp"
        android:layout_width="27dp"
        android:layout_height="34dp"
        android:layout_marginTop="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bgControll"

        app:srcCompat="@drawable/btn_up"
        android:onClick="clickControl"/>

    <ImageView
        android:id="@+id/btnDown"
        android:layout_width="27dp"
        android:layout_height="34dp"
        app:srcCompat="@drawable/btn_down"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btnRight"
        app:layout_constraintRight_toLeftOf="@+id/btnRight"

        android:layout_marginRight="0dp"
        android:onClick="clickControl"/>

    <ImageView
        android:id="@+id/imgCenter"
        android:layout_width="27dp"
        android:layout_height="27dp"
        app:srcCompat="@drawable/img_center"
        app:layout_constraintLeft_toRightOf="@+id/btnLeft"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btnUp" />

    <ImageView
        android:id="@+id/imgPause"
        android:layout_width="55dp"
        android:layout_height="28dp"
        app:srcCompat="@drawable/pause"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bgControll"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/bgControll"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.615"
        android:onClick="pauseGame"/>

</android.support.constraint.ConstraintLayout>
